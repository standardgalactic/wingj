\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{schaffter2013_manual_toc}
  [2006/05/22 v.2
  Table of Contents (TOC) for LaTeX]
\RequirePackage{schaffter2013_manual}

% Begin
\setcounter{tocdepth}{2} % 1 = Only show up to Section Level (not Subsection)
\renewcommand\tableofcontents{%
  \let\origcontentsname=\contentsname
  \def\contentsname{Contents}

  \if@twocolumn
    \@restonecoltrue\onecolumn
  \else
    \@restonecolfalse
  \fi
  %\fakechapter*{\contentsname}%
  \reallyfakechapter{\contentsname}
  \phantomsection{} \thispagestyle{empty}
  \@starttoc{toc}%
  \if@restonecol\twocolumn\fi
  
  \def\contentsname{\origcontentsname}
}
\endinput
